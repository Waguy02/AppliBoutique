<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="supermarche">
    <class>model.Commande</class>
    <class>model.Client</class>
    <class>model.Employe</class>
    <class>model.Facture</class>
    <class>model.Categorie</class>
    <class>model.Fournisseur</class>
    <class>model.LigneCommande</class>
    <class>model.LigneFacture</class>
    <class>model.Produit</class>
    <class>model.ProduitFournisseur</class>
    <class>model.LigneCommandeId</class>
    <class>model.LigneFactureId</class>
    <class>model.ProduitFournisseurId</class>
    <class>model.Remise</class>
    <class>model.RemiseId</class>
    <class>model.Versement</class>
    <class>model.VersementId</class>
    <class>constantes.Constantes</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/supermarche?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
